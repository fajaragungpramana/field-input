<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FieldInput">
        <attr name="drawableEnd" format="reference" />
        <attr name="focusable" format="boolean" />
        <attr name="hint" format="reference|string" />
        <attr name="inputType">
            <flag name="text" value="0x00000001" />
            <flag name="texMultiLine" value="0x00020001" />
            <flag name="textEmailAddress" value="0x00000021" />
            <flag name="textPersonName" value="0x00000061" />
            <flag name="textPassword" value="0x00000081" />
            <flag name="number" value="0x00000002" />
            <flag name="numberDecimal" value="0x00002002" />
        </attr>
        <attr name="passwordToggleEnabled" format="boolean" />
        <attr name="style" format="reference" />
        <attr name="textAllCaps" format="boolean" />
        <attr name="textColor" format="reference" />
        <attr name="textSize" format="dimension|reference" />
    </declare-styleable>

</resources>